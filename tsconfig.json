{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "ws/*": ["ws/*"],
      "http/*": ["http/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./*/**.ts",
    "./*/**.d.ts",
    "app.ts",
    "./plugins/*/index.ts",
    "./plugins/*/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
